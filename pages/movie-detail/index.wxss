/* pages/movie-detail/index.wxss */
@import "../movie-host/hotList.wxss";
page{
  font-size: 26rpx;
}
.poster-background{
  width:100%;
  height: 356rpx;
  overflow:hidden;
  position: relative;
}
.poster-cover{
  width: 100%;
  height: 356rpx;
  background: rgba(0, 0, 0, 0.6);
  position: absolute;
  top:0;
}
.img{
  width:100%;
}
.section-poster{
  position: relative
}
.section-back-cover{
  display: flex;
  position:absolute;
  bottom:-50rpx;
  padding: 0rpx 40rpx;
  color: #fff;
}
.poster,.poster image{
  width:200rpx
}
.section-title-main{
  width: 440rpx;
  margin-left: 40rpx;
  margin-top: 35rpx;
}
.section-title{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  
}
.title{
  font-size: 42rpx;
}
.section-rating{
  display: flex;
}
.average{
  font-size: 64rpx;
}
.right{
  margin-top: 15rpx;
  margin-left: 20rpx;
}
.rating{
  display: block;
  margin-top: 0;
  margin-bottom: 4rpx;
  height: 11px;
}
.ratings_count{
  color: #878787;
  font-size: 24rpx
}
.section-summary{
  margin-top: 40rpx;
  padding: 20rpx 40rpx;
}
.section-summary view:nth-child(n+1){
  margin-top: 8rpx;
}
.name::after{
  content: ' / '
}
.name:last-child::after{
  content: ''
}
.section-wish-to{
  display: flex;
  text-align: center;
  justify-content: space-between;
  padding: 0rpx 40rpx;
}
.section-wish-to text{
  display: block;
  border: solid 1px #FFA500;
  border-radius: 10rpx;
  width:40%;
  height: 52rpx;
  line-height: 52rpx;
  color:#FFA500;
}
.section-desc{
  padding: 20rpx 40rpx;
}
.section-desc view{
  margin-top: 20rpx;
}
.desc-title,.directors-casts-title{
  color:#878787
}
.session-directors-casts{
  padding: 20rpx 40rpx;
}
.directors-casts-content image{
  width: 200rpx;
  height: 280rpx;
}
.directors-casts-scroll{
  width: 100%;
  margin-top: 20rpx;
  white-space: nowrap;
}
.directors-casts-wrapper{
  display: inline-block;
}
.directors-casts-wrapper:nth-child(n+2){
  margin-left: 10rpx;
}
.directors-casts-content .name{
  display: block;
  text-align: center;
}